{
    "package": {
        "name": "python-gcg-centos",
        "repo": "yum-oss",
        "subject": "weakcamel",
        "desc": "I was pushed completely automatically",
        "website_url": "https://pypi.org/project/gcg/",
        "issue_tracker_url": "https://github.com/nokia/git-changelog-generator/issues",
        "vcs_url": "https://github.com/nokia/git-changelog-generator",
        "licenses": [
            "BSD 3-Clause"
        ],
        "labels": [
            "rpm",
            "git",
            "changelog",
            "python"
        ],
        "public_download_numbers": true,
        "public_stats": true
    },

    "version": {
        "name": "${version}",
        "desc": "This is a version",
        "released": "${release_date}",
        "vcs_tag": "${version}",
        "gpgSign": false
    },

    "files": [
        {
            "includePattern": "dist/(.*\\.rpm)",
            "excludePattern": ".*/do-not-deploy/.*",
            "uploadPattern": "stable/$1"
        }
    ],
    "publish": true
}
